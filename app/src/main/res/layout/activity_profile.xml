<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/realName"
        android:id="@+id/realName"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="10dp"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text=""
        android:id="@+id/realNameEdit"
        android:layout_alignBaseline="@+id/realName"
        android:layout_alignBottom="@+id/realName"
        android:layout_toRightOf="@+id/realName"
        android:layout_toEndOf="@+id/realName" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/username"
        android:textSize="25sp"
        android:id="@+id/usernameProfile"
        android:layout_below="@+id/realName"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="15dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text=""
        android:id="@+id/usernameProfileEdit"
        android:layout_alignBaseline="@+id/usernameProfile"
        android:layout_alignBottom="@+id/usernameProfile"
        android:layout_toRightOf="@+id/usernameProfile"
        android:layout_toEndOf="@+id/usernameProfile" />
</RelativeLayout>